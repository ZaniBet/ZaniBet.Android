<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="8dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zanihashTextView"
        android:text="- ZANIHASH"
        android:textSize="15sp"
        android:textColor="@color/colorElectromagnetic"
        android:fontFamily="@font/futuris_bold"
        android:textAllCaps="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zanihashDescTextView"
        android:layout_marginTop="4dp"
        android:text="@string/zanihash_desc"
        android:textSize="13sp"
        android:fontFamily="@font/helveticaneue_roman"
        android:textAlignment="center"
        android:textColor="@color/colorBangGrey"
        />

    <com.rilixtech.materialfancybutton.MaterialFancyButton
        android:id="@+id/moreZanihashButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:textAllCaps="true"
        fancy:mfb_radius="30dp"
        fancy:mfb_borderColor="#FFFFFF"
        fancy:mfb_borderWidth="1dp"
        fancy:mfb_text="@string/btn_more_hash"
        fancy:mfb_defaultColor="@color/colorPrimary"
        fancy:mfb_focusColor="@color/colorPrimaryDark"
        fancy:mfb_disabledColor="@color/colorCloud"
        fancy:mfb_textColor="@color/colorWhite"
        />

</LinearLayout>