<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">
        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/helveticaneue_roman"
            android:text="Date"
            android:textColor="@color/colorBangGrey"
            android:textAlignment="center"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/competitionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/helveticaneue_roman"
            android:text="@string/league"
            android:textAlignment="center"
            android:textColor="@color/colorBangGrey"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/homeTeamTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/helveticaneue_roman"
            android:text="@string/home"
            android:textColor="@color/colorBangGrey"
            android:textAlignment="center"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorWhiteLynx"
            android:layout_weight="1"
            android:fontFamily="@font/helveticaneue_roman"
            android:text="Score"
            android:textColor="@color/colorBangGrey"
            android:textAlignment="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/awayTeamTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/helveticaneue_roman"
            android:text="@string/away"
            android:textColor="@color/colorBangGrey"
            android:textAlignment="center"
            android:textSize="11sp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorTranslucentWhite50"/>
</LinearLayout>