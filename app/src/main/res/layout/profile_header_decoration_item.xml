<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_one">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageView"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:src="@drawable/bundesliga2"
            app:civ_border_width="0dp"
            android:elevation="1dp"/>
        <Button
            android:id="@+id/changePictureButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            android:textColor="@color/colorCloud"
            android:visibility="gone"
            android:background="?android:attr/selectableItemBackground"
            android:text="Modifier la photo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/changePictureButton"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            >
            <TextView
                android:id="@+id/pseudoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="ZaniBet"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/futuris_bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pointsTextView"
                android:textColor="#FFFFFF"
                android:text="0 ZANICOINS"
                android:fontFamily="@font/futuris_light"
                android:textSize="13sp"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>