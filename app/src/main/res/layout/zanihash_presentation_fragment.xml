<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_layout"
        android:background="@color/colorWhiteLynx"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/transparent_bordered_view"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="44dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_zanihash" />

                <TextView
                    android:id="@+id/descriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/helveticaneue_roman"
                    android:text="@string/zanianalytics_desc"
                    android:textAlignment="center"
                    android:textColor="@color/colorElectromagnetic"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/transparent_bordered_view"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/jetonAdsTitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futuris_bold"
                    android:text="@string/activity_title_zanihash"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/jetonAdsLimit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/helveticaneue_roman"
                    android:text="@string/start_analytics_desc"
                    android:textAlignment="center"
                    android:textColor="@color/colorElectromagnetic"
                    android:textSize="14sp" />


                <com.rilixtech.materialfancybutton.MaterialFancyButton
                    android:id="@+id/startZaniAnalyticsButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:textAllCaps="true"
                    fancy:mfb_defaultColor="@color/colorPrimary"
                    fancy:mfb_disabledColor="@color/colorCloud"
                    fancy:mfb_focusColor="@color/colorPrimaryDark"
                    fancy:mfb_radius="30dp"
                    fancy:mfb_text="@string/btn_start_zanianalytics"
                    fancy:mfb_textColor="@color/colorWhite"
                    fancy:mfb_textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/transparent_bordered_view"
                android:elevation="4dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="44dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_question" />

                <TextView
                    android:id="@+id/questionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/helveticaneue_roman"
                    android:text="@string/zanianalytics_question"
                    android:textAlignment="center"
                    android:textColor="@color/colorElectromagnetic"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
